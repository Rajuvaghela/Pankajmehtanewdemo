<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pankajmehtanewdemo.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/orangegrad" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/onefive"
            android:background="@drawable/register_logo" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fivezero"
            android:layout_marginBottom="@dimen/eight"
            android:layout_marginLeft="@dimen/onezero"
            android:layout_marginRight="@dimen/onezero"
            android:layout_marginTop="@dimen/onezero"
            android:background="@drawable/back_bottom"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/twozero" />

        <EditText
            android:id="@+id/et_Register_Mobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fivezero"
            android:layout_marginBottom="@dimen/onefive"
            android:layout_marginLeft="@dimen/onezero"
            android:layout_marginRight="@dimen/onezero"
            android:background="@drawable/square_back_customwhite"
            android:hint="Mobile no. : "
            android:inputType="number"
            android:paddingLeft="@dimen/onezero"
            android:textSize="@dimen/twozero" />

        <EditText
            android:id="@+id/et_Register_Name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fivezero"
            android:layout_marginBottom="@dimen/onefive"
            android:layout_marginLeft="@dimen/onezero"
            android:layout_marginRight="@dimen/onezero"
            android:background="@drawable/square_back_customwhite"
            android:hint="Name : "
            android:paddingLeft="@dimen/onezero"
            android:textSize="@dimen/twozero" />


        <Button
            android:id="@+id/bt_Register_Submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fivezero"
            android:layout_marginBottom="@dimen/onefive"
            android:layout_marginLeft="@dimen/onezero"
            android:layout_marginRight="@dimen/onezero"
            android:layout_marginTop="@dimen/onezero"
            android:background="@drawable/back_bottom"
            android:text="Submit"
            android:textSize="@dimen/twozero" />
    </LinearLayout>
</RelativeLayout>
