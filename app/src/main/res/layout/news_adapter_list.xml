<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/four"
    android:layout_marginLeft="@dimen/two"
    android:layout_marginRight="@dimen/two"
    android:layout_marginTop="@dimen/four"
    android:background="#D4D4D4"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_news_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/onesixfive"
                android:layout_marginLeft="@dimen/two"
                android:layout_marginRight="@dimen/two"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/twotwo"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/five"
                android:layout_marginTop="@dimen/five"
                android:background="#ffffff"
                android:paddingLeft="@dimen/onezero"
                android:ellipsize="end"
                android:paddingBottom="@dimen/two"
                android:text="title\ntitle"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="@dimen/onefour" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five"
                android:id="@+id/tv_news_date"
                android:paddingLeft="@dimen/onezero"
                android:text="08-08-2014">

            </TextView>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>